# ==============================================================================
# COAZ CHATBOT FRONTEND ENVIRONMENT CONFIGURATION
# ==============================================================================

# React Environment
# Options: development, production, test
NODE_ENV=production

# API Configuration
# Backend server URLs for different environments
REACT_APP_API_BASE_URL=http://localhost:8080
REACT_APP_PRODUCTION_API_URL=https://coaz.org
REACT_APP_DEVELOPMENT_API_URL=http://localhost:8080

# App Configuration
REACT_APP_APP_NAME=COAZ Chatbot
REACT_APP_VERSION=1.0.0

# Chatbot Settings
REACT_APP_CHATBOT_WELCOME_MESSAGE=Hi ðŸ‘‹ I'm your assistant! Ask me anything about the constitution.
REACT_APP_CHATBOT_PLACEHOLDER=Ask me about the constitution...
REACT_APP_CHATBOT_ERROR_MESSAGE=Sorry, I couldn't reach the server.

# UI Settings
REACT_APP_ENABLE_QUICK_ACTIONS=true
REACT_APP_ENABLE_MESSAGE_PERSISTENCE=true
REACT_APP_ENABLE_TYPING_INDICATOR=true
REACT_APP_ENABLE_COPY_MESSAGES=true
REACT_APP_ENABLE_TIMESTAMPS=true

# Session Configuration
REACT_APP_SESSION_STORAGE_KEY=chatbot-messages
REACT_APP_MAX_MESSAGE_HISTORY=100

# Feature Flags
REACT_APP_ENABLE_VOICE_INPUT=false
REACT_APP_ENABLE_FILE_UPLOAD=false
REACT_APP_ENABLE_ANALYTICS=false

# Theme Configuration
REACT_APP_PRIMARY_COLOR=rgb(0,175,240)
REACT_APP_THEME_MODE=light

# Performance Settings
REACT_APP_API_TIMEOUT=30000
REACT_APP_RETRY_ATTEMPTS=3

# Debug Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_ENABLE_CONSOLE_LOGS=true

# ==============================================================================
# USAGE NOTES:
# ==============================================================================
# - React environment variables must start with REACT_APP_
# - NODE_ENV is automatically set by React scripts
# - Variables are embedded at build time (not runtime)
# - Restart development server after changing variables
