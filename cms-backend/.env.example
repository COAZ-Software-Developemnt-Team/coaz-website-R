# ==============================================================================
# COAZ CHATBOT ENVIRONMENT CONFIGURATION (EXAMPLE)
# ==============================================================================

# AI Provider Configuration
# Options: 'ai_horde', 'mock'
AI_PROVIDER=ai_horde

# Fallback to mock responses if AI fails
AI_FALLBACK_TO_MOCK=true

# AI Request Timeout (milliseconds) - should be longer than max AI Horde polling time
# Default: 120000 (2 minutes) - allows for AI Horde queue processing
AI_TIMEOUT=120000

# AI Maximum Retries
AI_MAX_RETRIES=2

# Hugging Face Configuration (FREE!)
# Get your API key from: https://huggingface.co/settings/tokens (OPTIONAL - works without key)
HUGGINGFACE_API_KEY=

# Open Source Model Configuration
# Llama3 Model
LLAMA3_MODEL=meta-llama/Llama-2-7b-chat-hf
LLAMA3_MAX_TOKENS=500
LLAMA3_TEMPERATURE=0.7

# Flan-T5 Model  
FLAN_T5_MODEL=google/flan-t5-large
FLAN_T5_MAX_TOKENS=512
FLAN_T5_TEMPERATURE=0.5

# GPT-J Model
GPT_J_MODEL=EleutherAI/gpt-j-6b
GPT_J_MAX_TOKENS=500
GPT_J_TEMPERATURE=0.7

# Phi-4 Model
PHI_4_MODEL=microsoft/phi-2
PHI_4_MAX_TOKENS=500
PHI_4_TEMPERATURE=0.6

# Server Configuration
PORT=8080

# Environment (development, staging, production)
NODE_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://coaz.org

# OpenAI Model Settings
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Conversation Management
MAX_CONVERSATION_HISTORY=20
SESSION_TIMEOUT_MINUTES=60

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# PDF Processing
CONSTITUTION_PDF_PATH=./constitution.pdf

# ==============================================================================
# SETUP INSTRUCTIONS:
# ==============================================================================
# 1. Copy this file to .env
# 2. Replace 'your-openai-api-key-here' with your actual OpenAI API key
# 3. Modify other settings as needed for your environment
# 4. Get your OpenAI API key from: https://platform.openai.com/api-keys
#
# CURRENTLY REQUIRED VARIABLES:
# [ACTIVE] OPENAI_API_KEY - For AI responses
# [ACTIVE] PORT - Server port number
# 
# FUTURE ENHANCEMENT VARIABLES:
# [READY] All others are prepared for advanced features
# ==============================================================================