# ==============================================================================
# COAZ CHATBOT ENVIRONMENT CONFIGURATION
# ==============================================================================

# AI Provider Configuration
# Options: 'openai', 'huggingface', 'offline'
AI_PROVIDER=huggingface

# Fallback to offline responses if AI fails
AI_FALLBACK_OFFLINE=true

# OpenAI Configuration (PAID - Optional)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Hugging Face Configuration (FREE!)
# Get your API key from: https://huggingface.co/settings/tokens (OPTIONAL)
HUGGINGFACE_API_KEY=
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium
HUGGINGFACE_MAX_TOKENS=500
HUGGINGFACE_QA_MODEL=deepset/roberta-base-squad2
HUGGINGFACE_FALLBACK_QA_MODEL=microsoft/DialoGPT-medium

# Server Configuration
PORT=8080

# Environment (development, staging, production)
NODE_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://coaz.org

# OpenAI Model Settings
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Conversation Management
MAX_CONVERSATION_HISTORY=20
SESSION_TIMEOUT_MINUTES=60

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# PDF Processing
CONSTITUTION_PDF_PATH=./constitution.pdf

# RAG System Configuration
# Enable/disable RAG system
RAG_ENABLED=true

# QA model for document retrieval
RAG_MODEL=deepset/roberta-base-squad2

# Confidence threshold for RAG responses (0.0 to 1.0)
RAG_CONFIDENCE_THRESHOLD=0.7

# Offline Response Configuration
# Enable/disable enhanced offline responses (default: true)
OFFLINE_RESPONSE_ENABLED=false

# Use offline responses only as fallback when AI fails (default: false)
OFFLINE_RESPONSE_FALLBACK_ONLY=false

# Force simple short answers for basic questions (default: false)
OFFLINE_FORCE_SIMPLE_ANSWERS=false

# Web Scraping Configuration
# Enable/disable web scraping from COAZ website (default: true)
WEB_SCRAPING_ENABLED=true

# COAZ website URL to scrape for current information
COAZ_WEBSITE_URL=https://coaz.org

# Cache timeout for scraped website data in milliseconds (default: 1 hour)
WEB_CACHE_TIMEOUT=3600000

# ==============================================================================
# CURRENTLY USED VARIABLES:
# [ACTIVE] OPENAI_API_KEY - For AI responses
# [ACTIVE] PORT - Server port number
# [ACTIVE] OFFLINE_RESPONSE_ENABLED - Toggle offline responses on/off
# [ACTIVE] RAG_ENABLED - Toggle RAG system on/off
# 
# FUTURE ENHANCEMENT VARIABLES:
# [READY] All others are ready for when you want to add more features
# ==============================================================================